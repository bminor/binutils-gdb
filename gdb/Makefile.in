	cd readline ; ${MAKE} "SYSV=${SYSV_DEFINE}"\
		"VPATH=${srcdir}/readline:../${srcdir}/readline"\
		"LOCAL_INCLUDES=-I../ -I${srcdir}/ -I../${srcdir}/"\
		"DEBUG_FLAGS=${GLOBAL_CFLAGS}" "CC=${CC}" libreadline.a

