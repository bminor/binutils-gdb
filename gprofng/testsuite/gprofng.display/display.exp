if {[info exists env(LC_ALL)]} {
    set old_lc_all $env(LC_ALL)
}
set env(LC_ALL) "C"

set pltf [exec uname -i]

# Native testing only for now.
if { ![istarget $pltf-*-*]
     && (![string match i?86 $pltf] || ![istarget i?86-*-*]) } then {
    return
}

switch $pltf {
  x86_64 {
    # Columns in the table represent:
    #   dir      cflags         gprofflags       Others
    set table {
      {"jsynprog" "-g -Wall"        "-p on -j on"}
      {"mttest"   "-g -O0"          "-p on"}
      {"mttest"   "-g -O0"          "-p on -h on"}
      {"synprog"  "-g -O0"          "-p on"}
      {"synprog"  "-g -O0"           "-p on -h on"}
    }
  }
  aarch64 {
    set table {
      {"jsynprog" "-g -Wall"        "-p on -j on"}
      {"mttest"   "-g -O0"          "-p on"}
      {"synprog"  "-g -O0"          "-p on"}
    }
  }
  default {
    # Columns in the table represent:
    #   dir      cflags         gprofflags       Others
    set table {
      {"jsynprog" ""              ""}
      {"mttest"   ""              ""}
      {"synprog"  ""              ""}
    }
  }
}

global JDK_INC
global GPROFNG_BROKEN_JAVAC

foreach line $table {
  set dir [lindex $line 0]
  set cflags [lindex $line 1]
  set gprofflags [lindex $line 2]

  verbose [file rootname $line]
  verbose running display test $line
  if { $dir == "jsynprog"
       && ($JDK_INC == "" || $GPROFNG_BROKEN_JAVAC == "yes") } {
    unsupported $dir
  } else {
    run_display_test $dir $cflags $gprofflags
  }
}
    

if {[info exists old_lc_all]} {
    set env(LC_ALL) $old_lc_all
} else {
    unset env(LC_ALL)
}
