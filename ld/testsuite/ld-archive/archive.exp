# Dual whole archive tests.
run_ld_link_tests [list \
    [list "Regular archive plus whole regular link" \
	"-e ff" "tmpdir/ab.a --whole-archive tmpdir/cd.a" \
	"" {abcde.s} \
	[ld_archive_filter_tests {{nm "" abcde.nd} \
				  {nm "" nx.nd} \
