check:
installcheck:

### none

all-nothing: force
	
clean-nothing:  force

install-nothing: force


### z8k

all-z8k: force
	if [ -f ./z8k/Makefile ] ; then \
		rootme=`pwd` ; export rootme ; \
		( cd ./z8k ; $(MAKE) $(FLAGS_TO_PASS) all) ; \
	else \
		true ; \
	fi

install-z8k: force
	if [ -f ./z8k/Makefile ] ; then \
		rootme=`pwd` ; export rootme ; \
		( cd ./z8k ; $(MAKE) $(FLAGS_TO_PASS) install) ; \
	else \
		true ; \
	fi

